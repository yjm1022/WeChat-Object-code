/** user 头部开始 **/
.header{
  display: flex;
  flex-direction: row;
}

.userinfo-avatar {
  width: 168rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo-header{
  display: flex;
  width: 80%;
  height: 128rpx;
  margin: 20rpx;
  /*border: 2rpx solid gold;*/

}

.userinfo-header view{
  width:50%;
  height: 128rpx; 
  text-align: center;
  line-height: 128rpx;
  opacity: 0.5;
  /*border: 2rpx solid red;*/
}
/** user 头部结束 **/

.h_2{
  border: 0.3rpx solid #C3C3C3;
