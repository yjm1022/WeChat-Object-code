.body_main{
  position: relative;
  height: 160px;
  padding: 20rpx 0rpx 10rpx 0rpx;
  border-bottom: 1rpx solid #E6E3E4;
}

.cart_no{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
} 
.cart_no .cart_no_icon{
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background-color: #C5C5C5;
  margin: 30rpx auto;
}
.cart_no .cart_no_text view{
  font-size: 1.5em;
  text-align: center;
  margin: 10rpx 0rpx;
}

.cart_no .cart_no_btn{
  width: 80%;
  height: 120rpx;
  margin-top: 15%;
  color: white;
  background: linear-gradient(to right, #FF3F48 , #FF8C39);
}


.body_main .body_check{
    float: left;
    width: 10%;
    height: 160px;
    line-height: 160px;
}

.body_main .body_img{
   width: 120px;
   height: 160px;
   float: left;
   position: relative;
}
.body_main .body_img image{
  position: absolute;
  width: 120px;
  height: 120px;
  top: 50%;
  transform: translateY(-50%);
}
.body_main .bidy_right{
  height: 160px;
  width: 50%;
  float: left;
  margin-left: 20rpx;
  position: relative;
}
.bidy_right .body_proName{
  font-weight: bold;
  font-size: 1.2em;
  margin-top: 20px;
}

.bidy_right .body_proMA{
  color: #FF2D37;
  margin: 20rpx 0rpx 20rpx 0rpx;
}
.bidy_right .body_count{
  margin: 20rpx 0rpx 20rpx 0rpx;
}

.bidy_right .body_remove{
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  background-color: #FFD100;
  border-radius: 0rpx;
}

.hr{
  height: 120rpx;
}

.buy_main{
  position: fixed;
  width: 100%;
  height: 120rpx;
  bottom: 0rpx;
  background-color: #F0F0F0;
}

.buy_main .buy_check{
    float:left;
    line-height: 120rpx;
    position: absolute;
    margin-left: 20rpx;
}

.buy_main .buy_t{
    float:right;
    line-height: 120rpx;
    position: absolute;
    right: 25%;
}

.buy_t .buy_total{
  color: #CA0F0F;
}

.buy_main .buy_btn{
  background: linear-gradient(to right, #FF872D , #FE4045);
  color: white;
  width: 25%;
  height: 120rpx;
  line-height: 120rpx;
  position: absolute;
  right: 0rpx;
  border-radius: 0rpx;
}