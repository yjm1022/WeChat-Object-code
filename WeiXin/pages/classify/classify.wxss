.body{
  width: 90%;
  height: 100%;
  display: flex;
  flex-direction: row;
  margin: 20rpx auto;
}

.swiper-tab{
    width: 25%;
    display: flex;
    flex-direction: column;
}
/* 没得到焦点的按钮样式*/
.swiper-tab-item{
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    background-color: #F6F6F6;
    border-bottom: 1rpx solid #E0E0E0;
} 
/* 得到焦点的按钮样式 */
.active{
    color:red;
    background-color: white;
    /*border-bottom: 1rpx solid red;*/
}

.main{
  margin-left: 5%;
  width: 75%;
  /*border: 1rpx solid red;*/
  position: relative;
}

.main swiper-item{
  height: 100%;
}
.main .sp_main{
  width: 40%;
  margin: 20rpx;
  height: 300rpx;
  display: block;
  float: left;
  border-bottom: 1rpx solid orange;
}

.main .sp_main .main_img image{
  width: 100%;
  height: 180rpx;
}

.main .mian_text{
  font-size: 0.8em
}
.main .mian_text .main_proName{
    margin-bottom: 10rpx;
}
.main .mian_text .main_proName text{
  font-weight: bold;
} 

.main .mian_text .main_proMoney{
  margin-right: 20rpx;
}